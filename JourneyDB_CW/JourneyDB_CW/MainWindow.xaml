<Window x:Class="JourneyDB_CW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JourneyDB_CW"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1400">
    <Grid Margin="10">



        <TabControl x:Name="MainTabControl">
            <TabItem Header="Main menu">

                <StackPanel Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Background="#EEE" Margin="10">
                            <TextBlock Text="Search" FontWeight="Bold" Margin="10,10,10,0" FontSize="20"/>
                            <TextBox x:Name="SearchTextBox" Width="Auto" Margin="10,5,10,10" FontSize="20"/>
                            <Button x:Name="SearchButton" Content="Search" Width="Auto" Height="Auto" Margin="10,0,10,10"/>

                            <CheckBox x:Name="TopicCheckBox" Content="Topic" Width="Auto" Height="Auto" Margin="10"/>
                            <ComboBox x:Name="TopicComboBox" Width="Auto" Height="Auto" Margin="10, 0, 10, 0" IsEnabled="False">
                                
                            </ComboBox>

                            <CheckBox x:Name="CountryCheckBox" Content="Country" Width="Auto" Height="Auto" Margin="10"/>
                            <ComboBox x:Name="CountryComboBox" Width="Auto" Height="Auto" Margin="10, 0, 10, 0" IsEnabled="False">

                            </ComboBox>

                            <CheckBox x:Name="PriceCheckBox" Content="Price" Width="Auto" Height="Auto" Margin="10"/>
                            <ComboBox x:Name="PriceComboBox" Width="Auto" Height="Auto" Margin="10, 0, 10, 0" IsEnabled="False">

                            </ComboBox>

                            <CheckBox x:Name="TypeTransportCheckBox" Content="Type of transport" Width="Auto" Height="Auto" Margin="10"/>
                            <ComboBox x:Name="TypeTransportComboBox" Width="Auto" Height="Auto" Margin="10, 0, 10, 0" IsEnabled="False">

                            </ComboBox>

                        </StackPanel>

                        <StackPanel Grid.Column="1" Background="#DDD" Margin="10">
                            <DataGrid x:Name="DataGrid" AutoGenerateColumns="True" Height="615"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

            </TabItem>

            <!-- ======================================================================================== -->

            <TabItem Header="Account">

                <StackPanel Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>


                        <StackPanel Grid.Column="0" Background="#EEE" Margin="10">
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="1.6*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="First name:" FontWeight="Bold" Margin="10,10,10,0" FontSize="20" Grid.Column="0"/>
                                <TextBlock x:Name="FisrtName" Text="—" Margin="10,10,10,0" FontSize="20" Grid.Column="1"/>

                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="1.6*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Last name:" FontWeight="Bold" Margin="10,10,10,0" FontSize="20" Grid.Column="0"/>
                                <TextBlock x:Name="LastName" Text="—" Margin="10,10,10,0" FontSize="20" Grid.Column="1"/>

                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="1.6*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Email:" FontWeight="Bold" Margin="10,10,10,0" FontSize="20" Grid.Column="0"/>
                                <TextBlock x:Name="Email" Text="—" Margin="10,10,10,0" FontSize="20" Grid.Column="1"/>

                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="1.6*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Date birth:" FontWeight="Bold" Margin="10,10,10,0" FontSize="20" Grid.Column="0"/>
                                <TextBlock x:Name="DateBirth" Text="—" Margin="10,10,10,0" FontSize="20" Grid.Column="1"/>

                            </Grid>
                            
                            <TextBlock Text="Search:" FontWeight="Bold" Margin="10,50,10,0" FontSize="20"/>
                            <TextBox x:Name="SearchTextBox1" Width="Auto" Margin="10,5,10,10" FontSize="20"/>
                            <Button x:Name="SearchButton1" Content="Search" Width="Auto" Height="Auto" Margin="10,0,10,10"/>

                            

                            <TextBlock Text="Review:" FontWeight="Bold" Margin="10,50,10,0" FontSize="20"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <RadioButton x:Name="RadioButton1" Content="1*" Width="Auto" Height="Auto" Margin="10"/>
                                <RadioButton x:Name="RadioButton2" Content="2*" Width="Auto" Height="Auto" Margin="10" Grid.Column="1"/>
                                <RadioButton x:Name="RadioButton3" Content="3*" Width="Auto" Height="Auto" Margin="10" Grid.Column="2"/>
                                <RadioButton x:Name="RadioButton4" Content="4*" Width="Auto" Height="Auto" Margin="10" Grid.Column="3"/>
                                <RadioButton x:Name="RadioButton5" Content="5*" Width="Auto" Height="Auto" Margin="10" Grid.Column="4"/>

                            </Grid>

                            <Button x:Name="AddReviewButton" Content="Add review" Width="Auto" Height="Auto" Margin="10,0,10,10"/>

                        </StackPanel>

                        <StackPanel Grid.Column="1" Background="#DDD" Margin="10">
                            <DataGrid x:Name="DataGrid_Booking" AutoGenerateColumns="True" Height="630"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

            </TabItem>

            <!-- ======================================================================================== -->

            <TabItem Header="Admin" IsEnabled="False">
                <StackPanel Margin="10">
                    <TextBlock Text="Дані користувача."/>
                </StackPanel>
            </TabItem>
            
        </TabControl>
    </Grid>
</Window>
